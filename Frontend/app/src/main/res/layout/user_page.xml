<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/homeBtn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="start|top"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/homeimg_btn" />

    <ImageView
    android:id="@+id/imageView3"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_marginTop="5dp"
        android:layout_gravity="center"
    app:srcCompat="@drawable/user_page_logo" />

    <Button
        android:id="@+id/settingsBtn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:text="+ Settings"
        android:backgroundTint="@color/red"
        android:textColor="@color/yellow"/>

    <Button
        android:id="@+id/classLibBtn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="+ Class library"
        android:backgroundTint="@color/red"
        android:textColor="@color/yellow"/>

    <Button
        android:id="@+id/personalFileRepoBtn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/red"
        android:text="Personal file repo"
        android:textColor="@color/yellow"/>
    <Button
        android:id="@+id/classNewsButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/red"
        android:text="Class news"
        android:textColor="@color/yellow"/>

    <Button
        android:id="@+id/calendarButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/red"
        android:text="Calendar"
        android:textColor="@color/yellow"/>

    <Button
        android:id="@+id/classArchive"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/red"
        android:text="Class Archive"
        android:textColor="@color/yellow"/>








</LinearLayout>